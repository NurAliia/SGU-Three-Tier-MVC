@model Sgu.StudentTesting.PL.ViewModel.Comment.CommentCreateVM

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>CommentCreateVM</h4>
        <hr />
        @Html.Hidden("IDShop", ViewData["IDShop"])
        @Html.Hidden("IDUser", ViewData["IDUser"])

        <div class="form-group">
            @Html.LabelFor(model => model.Text,"Текст", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Вернуться", "Index", new { idShop = Model.IDShop })
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
