@model IEnumerable<Sgu.StudentTesting.PL.ViewModel.Comment.CommentDisplayVM>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Комментировать", "Create", new { idShop = (int)ViewData["IDShop"]})
</p>
<table class="table">
    <tr>
        <th>
            Автор
        </th>
        <th>
            Текст
        </th>
        <th>
            Дата
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NameUser)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Text)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        @if (ViewData["IDUser"].ToString() == item.NameUser)
        {
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.IDComment }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.IDComment, idShop = (int)ViewData["IDShop"] })
        </td>
        }
    </tr>
}

</table>
